<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title>Spatial</title>
    
    <%= stylesheet_link_tag "normalize", "spatial" %>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:300,400,700,900" %>
    <%= javascript_include_tag  "spatial", "spatial.config" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>